<div class="jumbotron">
  <h2>Welcome to IntelliFly</h2>
  <h4>Explore and leave reviews for your fellow travellers</h4>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>IATA</th>
      <% if user_signed_in? && current_user.admin? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @airports.each do |airport| %>
      <tr>
        <td><%= link_to airport.name, airport_path(airport) %></td>
        <td><%= airport.city %></td>
        <td><%= airport.IATA %></td>
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Edit', edit_airport_path(airport), class: "btn btn-link" %></td>
          <td><%= link_to 'Destroy', airport, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <% if user_signed_in? && current_user.admin? %>
    <%= link_to 'New Airport', new_airport_path, class: "btn btn-link" %>
  <% end %>
