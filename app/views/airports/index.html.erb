<div class="jumbotron">
  <!-- replace text with translation -->
  <%= t('jumbotron_title_html') %>
  <%= t('jumbotron_subtitle_html') %>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <%= t('name_html') %>
      <%= t('city_html') %>
      <%= t('iata_html') %>
      <% if user_signed_in? && current_user.admin? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @airports.each do |airport| %>
      <tr>
        <td><%= link_to airport.name, airport_path(airport) %></td>
        <td><%= airport.city %></td>
        <td><%= airport.IATA %></td>
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Edit', edit_airport_path(airport), class: "btn btn-link" %></td>
          <td><%= link_to 'Destroy', airport, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <% if user_signed_in? && current_user.admin? %>
    <%= link_to 'New Airport', new_airport_path, class: "btn btn-link" %>
  <% end %>
